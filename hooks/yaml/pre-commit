#!/usr/bin/env sh
#shellcheck disable=SC2086

set -e

# shellcheck disable=SC1091
. "$(dirname "$0")"/../_utils.sh

ensure_command "yamlfmt"
ensure_command "yamllint"

FILES=$(get_modified_files "*.yaml" "*.yml")

# FORMAT
run_if_not_empty "$FILES" run_and_print yamlfmt -dry -lint $FILES

# LINT
run_if_not_empty "$FILES" run_and_print yamllint $FILES
